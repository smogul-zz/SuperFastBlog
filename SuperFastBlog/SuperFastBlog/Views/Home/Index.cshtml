@{
    ViewBag.Title = "Home Page";
    var listOfArticles = ViewBag.ListOfArticles;

}



<div>
    @foreach (var item in listOfArticles)
    {
        var imageBase = Convert.ToBase64String(item.Image);
        var image = String.Format("data:image/jpeg;base64,{0}", imageBase);
        <div class="jumbotron" style="background-color: #f3bb04; ">
            <div class="row">   
                <div class="col-md-10" style="">
                    <h1>@item.Topic</h1>
                    <p class="lead">@item.Content
                    </p>
                    <p><a href="~/Home/About" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
                </div>

                <div class="col-md-2 float-right">
                    <img src="@image" class="rounded" style="height: 180px;" alt="" />
                </div>
            </div>


        </div>
    }
</div>



